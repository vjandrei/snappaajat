<header>
	<div class="container">
		<div class="row">
			<div class="col-xs-12 text-center">
				<a href="/"><div id="snappi-suomi-logo"></div></a>
				<a href="/"><h1>Snäppääjät</h1></a>
				<h4>Löydä kotimaisia snäppääjiä ja lisää oma snapchat profiilisi listaan</h4>	
				<% if user_signed_in? %>
				<% else %>
					<%= link_to "Kirjaudu", new_user_session_path, :class => "linkbutton"  %>
					<%= link_to "Rekisteröidy", new_user_registration_path, :class => "linkbutton"  %>
				<% end %> 
				
				<% if user_signed_in? %>
		        	<%= link_to "Kirjaudu ulos", destroy_user_session_path, method: :delete, :class => "linkbutton" %>
					<%= link_to "Muokkaa käyttäjätunnustasi", edit_user_registration_path, :class => "linkbutton" %>
		        <% else %>
		        <% end %>
			</div>
		</div>
	</div>
</header>

<section id="addNewProfile" class="pageContent">
	<div class="container">
		<div class="row">
			<div class="col-xs-12 col-sm-6 col-sm-offset-3  text-center">
			<h2>Profiilisi tiedot</h2>
			<h3>Alla näet profiilisi tiedot, voit lisää useampia profiileita ja ne näkyvät alla olevasta listasta.</h3>
			
			<% if  %>
			<%= link_to 'Lisää profiili', new_profile_path, :class => "linkbutton" %>
			<% else %>
			<p>Et ole vielä lisännyt profiiliasi</p>
			<% end %>
			
			
			<!--<button class="linkbutton"><%= link_to 'Lisää profiilisi', new_profile_path %></button>-->
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12 col-sm-6 col-sm-offset-3  text-center">
			
			<% @profiles.each do |profile| %>
				<%= profile.name %><br/>
				<%= link_to 'Näytä', profile %>
				<% if profile.user == current_user %>
					<%= link_to 'Muokkaa', edit_profile_path(profile) %>
					<%= link_to 'Poista', profile, method: :delete, data: { confirm: 'Are you sure?' } %>
				<% end %>
			<% end %>	
			
			
			<!--<button class="linkbutton"><%= link_to 'Lisää profiilisi', new_profile_path %></button>-->
			</div>
		</div>
	</div>
</section>
