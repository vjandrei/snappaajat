<header>
	<div class="container">
		<div class="row">
			<div class="col-xs-12 text-center">
				<a href="/"><div id="snappi-suomi-logo"></div></a>
				<a href="/"><h1>Snäppääjät</h1></a>
				<h4>Löydä kotimaisia snäppääjiä ja lisää oma snapchat profiilisi listaan</h4>	
			</div>
		</div>
	</div>
</header>

<section id="logIn" class="pageContent">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xs-12 col-sm-6 col-sm-offset-3  text-center">

			<h2>Kirjaudu sisään</h2>
			<h3>Täytä alla olevat tiedot</h3>
			
			<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			  <div class="field">
			    <%= f.label :email, 'Sähköposti' %><br />
			    <%= f.email_field :email, autofocus: true %>
			  </div>
			
			  <div class="field">
			    <%= f.label :password, 'Salasana' %><br />
			    <%= f.password_field :password, autocomplete: "off" %>
			  </div>
			
			  <% if devise_mapping.rememberable? -%>
			    <div class="field">
			      <%= f.check_box :remember_me %>
			      <%= f.label :remember_me, 'Muista kirjautuminen'  %>
			    </div>
			  <% end -%>
			
			  <div class="actions">
			    <button class="linkbutton"><%= f.submit "Log in" %></button>
			  </div>
			<% end %>
			
			<%= render "devise/shared/links" %>
			</div>
		</div>
	</div>
</section>
