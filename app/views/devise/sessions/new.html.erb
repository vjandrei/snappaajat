<%= render "layouts/header" %>

<section id="logIn" class="pageContent">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xs-12 col-sm-2"></div>
			<div class="col-xs-12 col-sm-8 text-center">

			<h1>Kirjaudu sisään</h1>
			<h3>Täytä alla olevat tiedot</h3>
			
			<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			  <div class="field">
			    <%= f.label :email, 'Sähköposti' %><br />
			    <%= f.email_field :email, autofocus: true %>
			  </div>
			
			  <div class="field">
			    <%= f.label :password, 'Salasana' %><br />
			    <%= f.password_field :password, autocomplete: "off" %>
			  </div>
			
			  <% if devise_mapping.rememberable? -%>
			    <div class="field">
					<div class="checkbox">
					<%= f.check_box :remember_me %>
					<%= f.label :remember_me, 'Muista kirjautuminen'  %>
					</div>
			    </div>
			  <% end -%>
			
			  <div class="actions">
			    <button class="linkbutton"><%= f.submit "Kirjaudu sisään" %></button>
			  </div>
			<% end %>
			
			<%= render "devise/shared/links" %>
			</div>
			<div class="col-xs-12 col-sm-2"></div>
		</div>
	</div>
</section>
